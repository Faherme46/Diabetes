<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="370dp"
        android:layout_height="123dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/allura"
        android:text="@string/diabetescare"
        android:textAlignment="center"
        android:textColor="#522828"
        android:textSize="60sp"
        android:typeface="normal"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="266dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/aladin"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/mis_habitos"
        android:textColor="#522828"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="TextSizeCheck" />

    <LinearLayout
        android:layout_width="169dp"
        android:layout_height="130dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/rounded20"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageView
            android:id="@+id/imageViewDescanso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descanso"
            app:srcCompat="@mipmap/ic_descanso" />

        <TextView
            android:id="@+id/textViewDescanso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abhaya_libre"
            android:text="@string/descanso"
            android:textAlignment="center"
            android:textColor="#522828"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="169dp"
        android:layout_height="130dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/rounded20"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageView
            android:id="@+id/imageViewEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/icono"
            app:srcCompat="@mipmap/ic_ejercicio" />

        <TextView
            android:id="@+id/textViewEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abhaya_libre"
            android:text="@string/ejercicio"
            android:textAlignment="center"
            android:textColor="#522828"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="169dp"
        android:layout_height="130dp"
        android:layout_marginTop="248dp"
        android:background="@drawable/rounded20"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageView
            android:id="@+id/imageViewAlimentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/icono"
            app:srcCompat="@mipmap/ic_alimentacion" />

        <TextView
            android:id="@+id/textViewAlimentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abhaya_libre"
            android:text="@string/alimentacion"
            android:textAlignment="center"
            android:textColor="#522828"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>